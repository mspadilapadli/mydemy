<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MyDemy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">
            <h5>Add Courses</h5>
            <div class="container mt-5">
                <% if (error) { %>
                    <p style="color: red; background-color: bisque;">
                        <%= error %>
                    </p>
                    <% } %>


                        <form action="/courses/update/<%= dataCourse.id %>" method="post">

                            <div>
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" name="name" value="<%= dataCourse.name %>">
                            </div>
                            <div>
                                <label class="form-label">Description</label>
                                <textarea type="text" class="form-control"
                                    name="description"><%= dataCourse.description %></textarea>
                            </div>

                            <div>
                                <label class="form-label">Category</label>
                                <select class="form-select" name="CategoryId">

                                    <% dataCategory.forEach(item=> { %>
                                        <% if (dataCourse.CategoryId===item.id) { %>
                                            <option value="<%= item.id %>" selected>
                                                <%= item.name %>
                                            </option>
                                            <% }else { %>
                                                <option value="<%= item.id %>" selected>
                                                    <%= item.name %>
                                                </option>
                                                <%} %>
                                                    <% }) %>

                                </select>
                            </div>
                            <div>
                                <label class="form-label">Duration</label>
                                <input type="text" class="form-control" name="duration"
                                    value="<%= dataCourse.duration %>">
                            </div>
                            <button type="submit" class="btn btn-primary mt-4">Update</button>
                        </form>



            </div>


        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>