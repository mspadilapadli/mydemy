<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MyDemy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <div class="container">


        <div class="container mt-5">

            <div classs="row">
                <div class="col-md-5 mx-auto">
                    <h5>Verification your Account</h5>
                    <% if (error) { %>
                        <p class=" d-flex justify-content-center text-danger bg-warning-subtle">
                            <%= error %>
                        </p>
                        <% } %>
                            <form action="/verif" method="post">

                                <div class="mb-4">
                                    <label class="form-label">Code Verifikasi</label>
                                    <input type="number" class="form-control" name="codeVerif" placeholder="1234">
                                </div>


                                <button type="submit"
                                    class="btn btn-primary mt-4 d-flex justify-content-center">Submit</button>
                            </form>

                </div>
            </div>





        </div>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>